@model ReciPies.Models.ViewModels.IndexViewModel


@{
    ViewData["Title"] = "Home";
}

<h1>This is a website</h1>

<select>
    @foreach (var tag in Model.Tags)
    {
        <option value="@tag">@tag</option>
    }
</select>

<form method="POST" action="@Url.Action("New", "Home")">
    <button type="submit">New recipe</button>
</form>

<!-- This is where recipes will be inserted -->
<div id="recipe-list"></div>
<div class="flex-container">
    <!-- Include your JavaScript -->
    <script src="~/js/site.js"></script>
</div>

<h3>End</h3>
